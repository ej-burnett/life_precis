
<%= stylesheet_link_tag 'register' %>

<%= simple_form_for(@user, :html => {:class => 'form-vertical' }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div id="wrapper">
  <h1>Create your profile by answering a few quick questions.</h1>
  <h3>To keep LifePrevis short and sweeet each field is limited to 200 characters.</h3>
  <div id="left_section">
    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name %>
    </div>
    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name %>
    </div>
    <div class="field">
      <%= f.label :born %><br />
      <%= f.text_field :born %>
    </div>
    <div class="field">
      <%= f.label :live_now %><br />
      <%= f.text_field :live_now %>
    </div>
    <div class="area">
      <%= f.label :live_past %><br />
      <%= f.text_area :live_past %>
    </div>
    <div class="area">
      <%= f.label :school %><br />
      <%= f.text_area :school %>
    </div>
    <div class="area">
      <%= f.label :career %><br />
      <%= f.text_area :career %>
    </div>
    <div class="area">
      <%= f.label :hobbies %><br />
      <%= f.text_area :hobbies %>
    </div>
    <div class="area">
      <%= f.label :misc %><br />
      <%= f.text_area :misc %>
    </div>
  </div>
  <div id="right_section">
    <div class="field">
      <%= f.label :email_address %><br />
      <%= f.text_field :email_address %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.text_field :password %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<!--   <%= link_to 'Back', users_path %> -->
</div>
<% end %>


<%= render 'form' %>


